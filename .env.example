# APP Configuration
APP_NAME=BingoSystem
APP_ENV=local
APP_DEBUG=true
APP_KEY=base64:generated_key_here

# Database
DB_CONNECTION=mysql
DB_HOST=mysql
DB_PORT=3306
DB_DATABASE=bingo_db
DB_USERNAME=bingo_user
DB_PASSWORD=bingo_password

# Redis
REDIS_HOST=redis
REDIS_PORT=6379
CACHE_DRIVER=redis
QUEUE_CONNECTION=redis
SESSION_DRIVER=redis

# Generator Service
GENERATOR_API_URL=http://python:8000
GENERATOR_API_KEY=dev-api-key

# Laravel Sanctum
SANCTUM_STATEFUL_DOMAINS=localhost,127.0.0.1
SANCTUM_AUTH_GUARD=sanctum

# Logging
LOG_CHANNEL=stack
LOG_LEVEL=debug

# Broadcasting
BROADCAST_DRIVER=pusher
PUSHER_APP_ID=local
PUSHER_APP_KEY=local
PUSHER_APP_SECRET=local
PUSHER_APP_CLUSTER=mt1
